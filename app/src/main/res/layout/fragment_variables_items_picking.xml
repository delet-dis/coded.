<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/variablesActions"
        style="@style/bottomSheetBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/variablesActions"
        android:textColor="@color/blueFourth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/variablesActionsLinearLayout"
        style="@style/bottomSheetItemsList"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/variablesActions" />

</androidx.constraintlayout.widget.ConstraintLayout>