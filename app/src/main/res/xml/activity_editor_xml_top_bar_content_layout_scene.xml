<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/topBarProjectNameMinified"
        motion:constraintSetStart="@id/topBarProjectNameDisplaying"
        motion:duration="200"
        motion:motionInterpolator="easeIn">
        <KeyFrameSet></KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/topBarProjectNameDisplaying">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/topBarProjectNameMinified">
        <Constraint
            android:id="@+id/projectName"
            style="@style/regularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:scaleX="0.65"
            android:scaleY="0.65"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.9" />
    </ConstraintSet>
</MotionScene>