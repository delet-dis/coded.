<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="boldText">
        <item name="android:fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">36sp</item>

        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">36sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">18sp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
    </style>

    <style name="semiBoldText">
        <item name="android:fontFamily">@font/rubik_semi_bold</item>
        <item name="android:textSize">20sp</item>

        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">20sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">10sp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
    </style>

    <style name="regularText">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">15sp</item>

        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">15sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">7sp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
    </style>

    <style name="buttonBoldText" parent="boldText">
        <item name="android:textSize">20sp</item>

        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">20sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">10sp</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
    </style>

    <style name="translucentButtonWrapper">
        <item name="android:maxWidth">@dimen/onboardingNextButtonMaxWidth</item>
        <item name="android:layout_height">@dimen/onboardingNextButtonHeight</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
</resources>